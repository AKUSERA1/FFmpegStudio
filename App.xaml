<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="FFmpegStudio.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FFmpegStudio"
    xmlns:converters="using:FFmpegStudio.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
            </ResourceDictionary.MergedDictionaries>
            
            <converters:BoolVisibilityConverter x:Key="BoolToVisibilityConverter" />
            <converters:NegativeBoolConverter x:Key="NegativeBoolConverter" />
            <converters:NegativeBoolToVisibilityConverter x:Key="NegativeBoolToVisibilityConverter" />
            <converters:StringNotEmptyToBoolConverter x:Key="StringNotEmptyToBoolConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
