<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="FFmpegStudio.Views.FrameSequenceSynthPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer>
        <StackPanel Padding="20" Spacing="20">
            <TextBlock Text="帧序列合成视频" FontSize="32" FontWeight="Bold" Foreground="{ThemeResource TextFillColorPrimaryBrush}" />

            <Border BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="8" Padding="20" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                <StackPanel Spacing="12">
                    <TextBlock Text="帧序列文件" FontSize="18" FontWeight="SemiBold" />
                    <Grid ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBox PlaceholderText="选择帧序列文件夹..." Text="{Binding FrameSequencePath, Mode=TwoWay}" IsReadOnly="True" />
                        <Button Grid.Column="1" Content="浏览" CornerRadius="4" />
                        <Button Grid.Column="2" Content="刷新" CornerRadius="4" />
                    </Grid>
                    <Grid ColumnSpacing="12" Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBox PlaceholderText="选择音频文件..." Text="{Binding AudioFilePath, Mode=TwoWay}" IsReadOnly="True" />
                        <Button Grid.Column="1" Content="浏览" CornerRadius="4" />
                    </Grid>
                    <TextBlock Text="已添加的帧序列" FontWeight="SemiBold" Margin="0,10,0,0" />
                    <ListBox ItemsSource="{Binding FrameSequences}" SelectionMode="Multiple" Height="150">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="10">
                                    <SymbolIcon Symbol="OpenFile" />
                                    <TextBlock Text="{Binding}" VerticalAlignment="Center" />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <Button Content="添加" Width="80" />
                        <Button Content="排序" Width="80" />
                        <Button Content="删除" Width="80" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="8" Padding="20" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                <StackPanel Spacing="16">
                    <TextBlock Text="合成设置" FontSize="18" FontWeight="SemiBold" />
                    <Grid ColumnSpacing="20" RowSpacing="15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <ComboBox IsEditable="True" ItemsSource="{Binding FrameRates}" Text="{Binding FrameRate, Mode=TwoWay}" SelectedItem="{Binding FrameRate, Mode=TwoWay}" Header="帧率 (fps)" />
                        <ComboBox Grid.Column="1" ItemsSource="{Binding VideoEncoders}" SelectedItem="{Binding SelectedVideoEncoder, Mode=TwoWay}" Header="视频编码器" />
                        <TextBox Grid.Column="2" PlaceholderText="5000k" Text="{Binding Bitrate, Mode=TwoWay}" Header="码率" />
                        <ComboBox Grid.Column="3" ItemsSource="{Binding AudioEncoders}" SelectedItem="{Binding SelectedAudioEncoder, Mode=TwoWay}" Header="音频编码器" />
                        <ComboBox Grid.Column="4" ItemsSource="{Binding Formats}" SelectedItem="{Binding SelectedFormat, Mode=TwoWay}" Header="容器" />
                        <ComboBox Grid.Column="5" ItemsSource="{Binding ColorSpaces}" SelectedItem="{Binding ColorSpace, Mode=TwoWay}" Header="色彩空间" />
                    </Grid>
                    <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,10,0,0">
                        <Button Content="开始合成" Style="{ThemeResource AccentButtonStyle}" />
                        <Button Content="重置设置" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="8" Padding="20" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                <StackPanel Spacing="12">
                    <TextBlock Text="预览" FontSize="18" FontWeight="SemiBold" />
                    <Border Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}" Height="300" CornerRadius="4">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="10">
                            <SymbolIcon Symbol="Pictures" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                            <TextBlock Text="预览区域" Foreground="{ThemeResource TextFillColorSecondaryBrush}" TextAlignment="Center" />
                        </StackPanel>
                    </Border>
                    <StackPanel VerticalAlignment="Center" Spacing="8">
                        <Slider Minimum="0" Maximum="100" Value="45" />
                        <StackPanel Orientation="Horizontal" Spacing="20">
                            <Button Content="上一帧" />
                            <Button Content="播放" Style="{ThemeResource AccentButtonStyle}" />
                            <Button Content="下一帧" />
                            <TextBlock Text="第 45 帧" VerticalAlignment="Center" />
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
