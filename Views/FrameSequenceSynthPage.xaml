<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="FFmpegStudio.Views.FrameSequenceSynthPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:viewmodels="using:FFmpegStudio.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:FrameSequenceSynthViewModel}"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer>
        <StackPanel Padding="20" Spacing="20">
            <TextBlock Text="帧序列合成视频" FontSize="32" FontWeight="Bold" Foreground="{ThemeResource TextFillColorPrimaryBrush}" />

            <Border BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="8" Padding="20" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                <StackPanel Spacing="12">
                    <TextBlock Text="帧序列文件" FontSize="18" FontWeight="SemiBold" />
                    <Grid ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBox PlaceholderText="选择帧序列文件夹..." Text="{Binding FrameSequencePath, Mode=TwoWay}" IsReadOnly="True" />
                        <Button Grid.Column="1" Content="浏览" CornerRadius="4" Command="{Binding BrowseFrameSequenceCommand}" />
                    </Grid>
                    <Grid ColumnSpacing="12" Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBox PlaceholderText="选择音频文件..." Text="{Binding AudioFilePath, Mode=TwoWay}" IsReadOnly="True" />
                        <Button Grid.Column="1" Content="浏览" CornerRadius="4" Command="{Binding BrowseAudioCommand}" />
                    </Grid>
                </StackPanel>
            </Border>

            <Border BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="8" Padding="20" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                <StackPanel Spacing="16">
                    <TextBlock Text="合成设置" FontSize="18" FontWeight="SemiBold" />
                    <Grid ColumnSpacing="20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="1.2*" />
                            <ColumnDefinition Width="0.9*" />
                            <ColumnDefinition Width="1.1*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="0.7*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <ComboBox Grid.Column="0"
                                  IsEditable="False"
                                  ItemsSource="{Binding Formats}"
                                  SelectedItem="{Binding SelectedFormat, Mode=TwoWay}"
                                  Header="容器" />

                        <ComboBox Grid.Column="1"
                                  IsEditable="False"
                                  ItemsSource="{Binding CodecCategories}"
                                  SelectedItem="{Binding SelectedCodecCategory, Mode=TwoWay}"
                                  Header="编码" />

                        <ComboBox Grid.Column="2"
                                  IsEditable="False"
                                  ItemsSource="{Binding Encoders}"
                                  SelectedItem="{Binding SelectedEncoder, Mode=TwoWay}"
                                  Header="编码器" />

                        <ComboBox Grid.Column="3"
                                  IsEditable="True"
                                  ItemsSource="{Binding FrameRates}"
                                  SelectedItem="{Binding FrameRate, Mode=TwoWay}"
                                  Header="帧率 (fps)" />

                        <ComboBox Grid.Column="4"
                                  IsEditable="False"
                                  ItemsSource="{Binding QualityPresets}"
                                  SelectedItem="{Binding SelectedQualityPreset, Mode=TwoWay}"
                                  Header="质量预设" />

                        <ComboBox Grid.Column="5"
                                  IsEditable="True"
                                  ItemsSource="{Binding Resolutions}"
                                  SelectedItem="{Binding Resolution, Mode=TwoWay}"
                                  Header="分辨率"
                                  Visibility="{Binding ShowAdvanced, Converter={StaticResource BoolToVisibilityConverter}}" />

                        <TextBox Grid.Column="6"
                                 PlaceholderText="kbps"
                                 Text="{Binding Bitrate, Mode=TwoWay}"
                                 Header="比特率"
                                 Visibility="{Binding ShowAdvanced, Converter={StaticResource BoolToVisibilityConverter}}" />

                        <ComboBox Grid.Column="7"
                                  IsEditable="False"
                                  ItemsSource="{Binding AudioCodecs}"
                                  SelectedItem="{Binding SelectedAudioCodec, Mode=TwoWay}"
                                  Header="音频编码" />
                    </Grid>

                    <Grid Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBox Text="{Binding FFmpegCommand, Mode=TwoWay}"
                                 Header="FFmpeg 命令"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 MinHeight="80" />
                    </Grid>

                    <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,10,0,0">
                        <Button Content="开始合成" Style="{ThemeResource AccentButtonStyle}" Command="{Binding StartSynthesisCommand}" />
                        <Button Content="取消操作" Command="{Binding CancelSynthesisCommand}" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- 任务历史，与 TranscodePage 布局保持一致 -->
            <Border BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="8" Padding="20" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                <StackPanel Spacing="12">
                    <TextBlock Text="任务历史" FontSize="18" FontWeight="SemiBold" />

                    <Grid ColumnSpacing="10" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="100" />
                            <ColumnDefinition Width="80" />
                            <ColumnDefinition Width="150" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="源文件" FontWeight="Bold" Grid.Column="0" />
                        <TextBlock Text="输出文件" FontWeight="Bold" Grid.Column="1" />
                        <TextBlock Text="状态" FontWeight="Bold" Grid.Column="2" />
                        <TextBlock Text="进度" FontWeight="Bold" Grid.Column="3" />
                        <TextBlock Text="创建时间" FontWeight="Bold" Grid.Column="4" />
                    </Grid>

                    <ListView ItemsSource="{Binding Tasks}" SelectionMode="None">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid ColumnSpacing="10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="80" />
                                        <ColumnDefinition Width="150" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{Binding SourceFile}" Grid.Column="0" />
                                    <TextBlock Text="{Binding OutputFile}" Grid.Column="1" />
                                    <TextBlock Text="{Binding Status}" Grid.Column="2" />
                                    <TextBlock Text="{Binding ProgressText}" Grid.Column="3" />
                                    <TextBlock Text="{Binding CreateTime}" Grid.Column="4" />
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
