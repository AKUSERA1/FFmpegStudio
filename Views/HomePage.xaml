<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="FFmpegStudio.Views.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer>
        <StackPanel Padding="20" Spacing="20">
            <TextBlock Text="FFmpeg 工作室" FontSize="32" FontWeight="Bold" Foreground="{ThemeResource TextFillColorPrimaryBrush}" />

            <Border BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="8" Padding="20" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                <StackPanel Spacing="12">
                    <TextBlock Text="FFmpeg 版本信息" FontSize="18" FontWeight="SemiBold" />
                    <Grid ColumnSpacing="20" RowSpacing="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="版本:" VerticalAlignment="Center" />
                        <TextBlock Grid.Column="1" Text="{Binding FFmpegVersion.Version}" VerticalAlignment="Center" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                        <TextBlock Grid.Column="2" Text="构建日期:" VerticalAlignment="Center" />
                        <TextBlock Grid.Column="3" Text="{Binding FFmpegVersion.BuildDate}" VerticalAlignment="Center" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                    </Grid>
                    <InfoBar IsOpen="{Binding FFmpegVersion.IsInstalled, Converter={StaticResource NegativeBoolConverter}}" Title="警告" Message="未检测到 FFmpeg · 到设置指定或安装FFmpeg" Severity="Warning" IsClosable="False" />
                </StackPanel>
            </Border>

            <Border BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="8" Padding="20" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                <StackPanel Spacing="12">
                    <TextBlock Text="系统硬件信息" FontSize="18" FontWeight="SemiBold" />
                    <Grid ColumnSpacing="40" RowSpacing="15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Spacing="8">
                            <StackPanel Orientation="Horizontal" Spacing="4">
                                <SymbolIcon Symbol="Manage" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}" />
                                <TextBlock Text="处理器" FontWeight="SemiBold" />
                            </StackPanel>
                            <TextBlock Text="{Binding HardwareInfo.CpuInfoDisplay}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" TextWrapping="Wrap" />
                            <TextBlock Text="{Binding HardwareInfo.CpuCoreCountDisplay}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" FontSize="12" />
                        </StackPanel>
                        <StackPanel Grid.Column="1" Spacing="8">
                            <StackPanel Orientation="Horizontal" Spacing="4">
                                <SymbolIcon Symbol="ViewAll" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}" />
                                <TextBlock Text="显卡" FontWeight="SemiBold" />
                            </StackPanel>
                            <TextBlock Text="{Binding HardwareInfo.GpuInfoDisplay}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" TextWrapping="Wrap" />
                        </StackPanel>
                        <StackPanel Grid.Column="2" Spacing="8">
                            <StackPanel Orientation="Horizontal" Spacing="4">
                                <SymbolIcon Symbol="Permissions" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}" />
                                <TextBlock Text="内存" FontWeight="SemiBold" />
                            </StackPanel>
                            <TextBlock Text="{Binding HardwareInfo.MemoryDisplay}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <Border BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="8" Padding="20" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                <StackPanel Spacing="12">
                    <TextBlock Text="支持的编解码器" FontSize="18" FontWeight="SemiBold" />
                    <ItemsRepeater ItemsSource="{Binding Codecs}">
                        <ItemsRepeater.Layout>
                            <StackLayout Orientation="Horizontal" Spacing="8" />
                        </ItemsRepeater.Layout>
                        <ItemsRepeater.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="6" Padding="12" Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}" Margin="8">
                                    <StackPanel Spacing="8">
                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="14" />
                                        <TextBlock Text="{Binding Description}" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" TextWrapping="Wrap" />
                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                            <Border Background="{ThemeResource AccentFillColorDefaultBrush}" CornerRadius="4" Padding="4,2" Visibility="{Binding IsEncoder, Converter={StaticResource BoolVisibilityConverter}}">
                                                <TextBlock Text="编码" FontSize="11" />
                                            </Border>
                                            <Border Background="{ThemeResource AccentFillColorSecondaryBrush}" CornerRadius="4" Padding="4,2" Visibility="{Binding IsDecoder, Converter={StaticResource BoolVisibilityConverter}}">
                                                <TextBlock Text="解码" FontSize="11" />
                                            </Border>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsRepeater.ItemTemplate>
                    </ItemsRepeater>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
