                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsRepeater.ItemTemplate>
                                    </ItemsRepeater>
                                </Expander>
                                

                            </StackPanel>
                        </StackPanel>

                        <!-- 音频编解码器 -->
                        <StackPanel Spacing="8">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <SymbolIcon Symbol="Audio" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}" />
                                <TextBlock Text="音频编解码器" FontWeight="SemiBold" FontSize="16" />
                                <TextBlock Text="{Binding AudioCodecs.Count, Mode=OneWay}" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" VerticalAlignment="Center" />
                            </StackPanel>
                            
                            <!-- 常见音频编码类别 -->
