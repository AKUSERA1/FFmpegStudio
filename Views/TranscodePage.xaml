<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="FFmpegStudio.Views.TranscodePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer>
        <StackPanel Padding="20" Spacing="20">
            <TextBlock Text="视频转换" FontSize="32" FontWeight="Bold" Foreground="{ThemeResource TextFillColorPrimaryBrush}" />

            <Border BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="8" Padding="20" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                <StackPanel Spacing="12">
                    <TextBlock Text="源文件" FontSize="18" FontWeight="SemiBold" />
                    <Grid ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBox PlaceholderText="选择要转换的视频文件..." Text="{Binding SourceFilePath, Mode=TwoWay}" IsReadOnly="True" />
                        <Button Grid.Column="1" Content="浏览" CornerRadius="4" Command="{Binding BrowseCommand}" />
                    </Grid>

                    <Grid Visibility="{Binding HasVideoInfo, Converter={StaticResource BoolToVisibilityConverter}}" Margin="0,8,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Column="0" Grid.Row="0" Spacing="4" Margin="0,0,12,12">
                            <TextBlock Text="文件大小" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                            <TextBlock Text="{Binding VideoInfo.FileSizeFormatted}" FontSize="14" FontWeight="SemiBold" />
                        </StackPanel>

                        <StackPanel Grid.Column="1" Grid.Row="0" Spacing="4" Margin="0,0,12,12">
                            <TextBlock Text="视频编码" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                            <TextBlock Text="{Binding VideoInfo.VideoCodec}" FontSize="14" FontWeight="SemiBold" />
                        </StackPanel>

                        <StackPanel Grid.Column="2" Grid.Row="0" Spacing="4" Margin="0,0,12,12">
                            <TextBlock Text="音频编码" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                            <TextBlock Text="{Binding VideoInfo.AudioCodec}" FontSize="14" FontWeight="SemiBold" />
                        </StackPanel>

                        <StackPanel Grid.Column="3" Grid.Row="0" Spacing="4" Margin="0,0,0,12">
                            <TextBlock Text="分辨率" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                            <TextBlock Text="{Binding VideoInfo.Resolution}" FontSize="14" FontWeight="SemiBold" />
                        </StackPanel>

                        <StackPanel Grid.Column="0" Grid.Row="1" Spacing="4" Margin="0,0,12,0">
                            <TextBlock Text="码率" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                            <TextBlock Text="{Binding VideoInfo.Bitrate}" FontSize="14" FontWeight="SemiBold" />
                        </StackPanel>

                        <StackPanel Grid.Column="1" Grid.Row="1" Spacing="4" Margin="0,0,12,0">
                            <TextBlock Text="帧率" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                            <TextBlock Text="{Binding VideoInfo.FrameRate}" FontSize="14" FontWeight="SemiBold" />
                        </StackPanel>

                        <StackPanel Grid.Column="2" Grid.Row="1" Spacing="4" Margin="0,0,12,0">
                            <TextBlock Text="色深" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                            <TextBlock Text="{Binding VideoInfo.BitDepth}" FontSize="14" FontWeight="SemiBold" />
                        </StackPanel>

                        <StackPanel Grid.Column="3" Grid.Row="1" Spacing="4" Margin="0,0,0,0">
                            <TextBlock Text="色彩空间" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                            <TextBlock Text="{Binding VideoInfo.ColorSpace}" FontSize="14" FontWeight="SemiBold" />
                        </StackPanel>
                    </Grid>

                    <ProgressRing IsActive="{Binding IsLoadingVideoInfo}" Visibility="{Binding IsLoadingVideoInfo, Converter={StaticResource BoolToVisibilityConverter}}" HorizontalAlignment="Left" />
                </StackPanel>
            </Border>


            <Border BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="8" Padding="20" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                <StackPanel Spacing="16">
                    <TextBlock Text="转换设置" FontSize="18" FontWeight="SemiBold" />
                    <Grid ColumnSpacing="20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <ComboBox Grid.Column="0" IsEditable="False" ItemsSource="{Binding Formats}" SelectedItem="{Binding SelectedFormat, Mode=TwoWay}" Header="容器" />
                        <ComboBox Grid.Column="1" IsEditable="True" ItemsSource="{Binding CodecCategories}" SelectedItem="{Binding SelectedCodecCategory, Mode=TwoWay}" Header="编码" />
                        <ComboBox Grid.Column="2" IsEditable="True" ItemsSource="{Binding Encoders}" SelectedItem="{Binding SelectedEncoder, Mode=TwoWay}" Header="编码器" />
                        <ComboBox Grid.Column="3" IsEditable="True" ItemsSource="{Binding Resolutions}" SelectedItem="{Binding Resolution, Mode=TwoWay}" Header="分辨率" />
                        <TextBox Grid.Column="4" PlaceholderText="kbps" Text="{Binding Bitrate, Mode=TwoWay}" Header="比特率" />
                        <ComboBox Grid.Column="5" IsEditable="True" ItemsSource="{Binding FrameRates}" SelectedItem="{Binding FrameRate, Mode=TwoWay}" Header="帧率 (fps)" />
                        <ComboBox Grid.Column="6" ItemsSource="{Binding ColorSpaces}" SelectedItem="{Binding ColorSpace, Mode=TwoWay}" Header="色彩空间" Visibility="{Binding ShowAdvanced, Converter={StaticResource BoolToVisibilityConverter}}" />
                    </Grid>
                    <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,10,0,0">
                        <Button Content="开始转换" Style="{ThemeResource AccentButtonStyle}" />
                        <Button Content="取消操作" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="8" Padding="20" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                <StackPanel Spacing="12">
                    <TextBlock Text="任务历史" FontSize="18" FontWeight="SemiBold" />
                    <ListView ItemsSource="{Binding Tasks}" SelectionMode="None">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid ColumnSpacing="10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="80" />
                                        <ColumnDefinition Width="150" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{Binding SourceFile}" Grid.Column="0" />
                                    <TextBlock Text="{Binding OutputFile}" Grid.Column="1" />
                                    <TextBlock Text="{Binding Status}" Grid.Column="2" />
                                    <TextBlock Text="{Binding Progress}" Grid.Column="3" />
                                    <TextBlock Text="{Binding CreateTime}" Grid.Column="4" />
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
