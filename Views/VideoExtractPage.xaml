<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="FFmpegStudio.Views.VideoExtractPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    MinWidth="800"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer>
        <StackPanel Padding="20" Spacing="20" >
            <TextBlock Text="视频提取为帧序列" FontSize="32" FontWeight="Bold" Foreground="{ThemeResource TextFillColorPrimaryBrush}" />

            <Border BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="8" Padding="20" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                <StackPanel Spacing="12">
                    <TextBlock Text="选择视频" FontSize="18" FontWeight="SemiBold" />
                    <Grid ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBox PlaceholderText="选择要提取的视频文件..." Text="{Binding VideoFilePath, Mode=TwoWay}" IsReadOnly="True" />
                        <Button Grid.Column="1" Content="浏览" CornerRadius="4" Command="{Binding BrowseCommand}" />
                    </Grid>

                    <Grid Visibility="{Binding HasVideoInfo, Converter={StaticResource BoolToVisibilityConverter}}" Margin="0,8,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Column="0" Grid.Row="0" Spacing="4" Margin="0,0,12,12">
                            <TextBlock Text="文件大小" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                            <TextBlock Text="{Binding VideoInfo.FileSizeFormatted}" FontSize="14" FontWeight="SemiBold" />
                        </StackPanel>

                        <StackPanel Grid.Column="1" Grid.Row="0" Spacing="4" Margin="0,0,12,12">
                            <TextBlock Text="视频编码" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                            <TextBlock Text="{Binding VideoInfo.VideoCodec}" FontSize="14" FontWeight="SemiBold" />
                        </StackPanel>

                        <StackPanel Grid.Column="2" Grid.Row="0" Spacing="4" Margin="0,0,12,12">
                            <TextBlock Text="音频编码" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                            <TextBlock Text="{Binding VideoInfo.AudioCodec}" FontSize="14" FontWeight="SemiBold" />
                        </StackPanel>

                        <StackPanel Grid.Column="3" Grid.Row="0" Spacing="4" Margin="0,0,0,12">
                            <TextBlock Text="分辨率" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                            <TextBlock Text="{Binding VideoInfo.Resolution}" FontSize="14" FontWeight="SemiBold" />
                        </StackPanel>

                        <StackPanel Grid.Column="0" Grid.Row="1" Spacing="4" Margin="0,0,12,0">
                            <TextBlock Text="码率" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                            <TextBlock Text="{Binding VideoInfo.Bitrate}" FontSize="14" FontWeight="SemiBold" />
                        </StackPanel>

                        <StackPanel Grid.Column="1" Grid.Row="1" Spacing="4" Margin="0,0,12,0">
                            <TextBlock Text="帧率" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                            <TextBlock Text="{Binding VideoInfo.FrameRate}" FontSize="14" FontWeight="SemiBold" />
                        </StackPanel>

                        <StackPanel Grid.Column="2" Grid.Row="1" Spacing="4" Margin="0,0,12,0">
                            <TextBlock Text="色深" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                            <TextBlock Text="{Binding VideoInfo.BitDepth}" FontSize="14" FontWeight="SemiBold" />
                        </StackPanel>

                        <StackPanel Grid.Column="3" Grid.Row="1" Spacing="4" Margin="0,0,0,0">
                            <TextBlock Text="色彩空间" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                            <TextBlock Text="{Binding VideoInfo.ColorSpace}" FontSize="14" FontWeight="SemiBold" />
                        </StackPanel>
                    </Grid>

                    <ProgressRing IsActive="{Binding IsLoadingVideoInfo}" Visibility="{Binding IsLoadingVideoInfo, Converter={StaticResource BoolToVisibilityConverter}}" HorizontalAlignment="Left" />

                </StackPanel>
            </Border>

            <Border BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="8" Padding="20" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                <StackPanel Spacing="16">
                    <TextBlock Text="提取设置" FontSize="18" FontWeight="SemiBold" />
                    <Grid ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBox PlaceholderText="选择输出目录..." Text="{Binding OutputPath, Mode=TwoWay}" IsReadOnly="True" />
                        <ComboBox Grid.Column="1" IsEditable="True" ItemsSource="{Binding FileNameTemplates}" SelectedItem="{Binding FileNameTemplate, Mode=TwoWay}" />
                        <Button Grid.Column="2" Content="浏览" CornerRadius="4" VerticalAlignment="Bottom" Command="{Binding BrowseOutputCommand}" />
                    </Grid>
                    <Grid ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <ComboBox Grid.Column="0" ItemsSource="{Binding Formats}" SelectedItem="{Binding SelectedFormat, Mode=TwoWay}" Header="输出格式" MinWidth="80" />
                        <ComboBox Grid.Column="1" Header="Alpha(视频有才生效)" HorizontalAlignment="Left" MinWidth="100" Margin="10,0,0,0" 
                                  ItemsSource="{Binding AlphaChannelOptions}" SelectedItem="{Binding AlphaChannel, Mode=TwoWay}"
                                  IsEnabled="{Binding IsAlphaChannelEnabled}" />
                        <Slider Grid.Column="2" Minimum="0" Maximum="100" Value="{Binding Quality, Mode=TwoWay}" HorizontalAlignment="Stretch" MinWidth="110" MaxWidth="350" Margin="10,0,20,0"
                                IsEnabled="{Binding IsQualityEnabled}">
                            <Slider.Header>
                                    <TextBlock>
                                            <Run Text="JPG质量(" />
                                            <Run Text="{Binding Quality, Mode=OneWay}" />
                                            <Run Text=")" />
                                    </TextBlock>
                            </Slider.Header>
                        </Slider>
                        <ComboBox Grid.Column="3" Header="EXR精度" Width="160" Margin="10,0,0,0" 
                                  ItemsSource="{Binding ExrPrecisionOptions}" SelectedItem="{Binding ExrPrecision, Mode=TwoWay}"
                                  IsEnabled="{Binding IsExrPrecisionEnabled}" />
                        <ComboBox Grid.Column="4" Header="EXR编码器" Width="130" Margin="10,0,0,0"
                                  ItemsSource="{Binding ExrEncodingOptions}" SelectedItem="{Binding ExrEncoding, Mode=TwoWay}"
                                  IsEnabled="{Binding IsExrEncodingEnabled}" />
                    </Grid>
                    <Grid Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBox Text="{Binding FFmpegCommand, Mode=TwoWay}" Header="FFmpeg 命令" TextWrapping="Wrap" AcceptsReturn="True" MinHeight="80" />
                    </Grid>

                    <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,10,0,0">
                        <Button Content="开始提取" Style="{ThemeResource AccentButtonStyle}" CornerRadius="4" Command="{Binding StartExtractCommand}" />
                        <Button Content="取消操作" CornerRadius="4" Command="{Binding CancelExtractCommand}" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- 任务历史，与 TranscodePage 布局保持一致 -->
            <Border BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="8" Padding="20" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                <StackPanel Spacing="12">
                    <TextBlock Text="任务历史" FontSize="18" FontWeight="SemiBold" />

                    <Grid ColumnSpacing="10" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="100" />
                            <ColumnDefinition Width="80" />
                            <ColumnDefinition Width="150" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="源文件" FontWeight="Bold" Grid.Column="0" />
                        <TextBlock Text="输出文件" FontWeight="Bold" Grid.Column="1" />
                        <TextBlock Text="状态" FontWeight="Bold" Grid.Column="2" />
                        <TextBlock Text="进度" FontWeight="Bold" Grid.Column="3" />
                        <TextBlock Text="创建时间" FontWeight="Bold" Grid.Column="4" />
                    </Grid>

                    <ListView ItemsSource="{Binding Tasks}" SelectionMode="None">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid ColumnSpacing="10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="80" />
                                        <ColumnDefinition Width="150" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{Binding SourceFile}" Grid.Column="0" />
                                    <TextBlock Text="{Binding OutputFile}" Grid.Column="1" />
                                    <TextBlock Text="{Binding Status}" Grid.Column="2" />
                                    <TextBlock Text="{Binding ProgressText}" Grid.Column="3" />
                                    <TextBlock Text="{Binding CreateTime}" Grid.Column="4" />
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
