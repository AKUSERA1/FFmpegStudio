<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="FFmpegStudio.Views.VideoExtractPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer>
        <StackPanel Padding="20" Spacing="20">
            <TextBlock Text="视频提取为帧序列" FontSize="32" FontWeight="Bold" Foreground="{ThemeResource TextFillColorPrimaryBrush}" />

            <Border BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="8" Padding="20" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                <StackPanel Spacing="12">
                    <TextBlock Text="视频文件" FontSize="18" FontWeight="SemiBold" />
                    <Grid ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBox PlaceholderText="选择要提取的视频文件..." Text="{Binding VideoFilePath, Mode=TwoWay}" IsReadOnly="True" />
                        <Button Grid.Column="1" Content="浏览" CornerRadius="4" />
                        <Button Grid.Column="2" Content="预览" CornerRadius="4" />
                    </Grid>
                    <TextBlock Text="预览" FontWeight="SemiBold" Margin="0,10,0,0" />
                    <Border Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}" Height="200" CornerRadius="4">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="10">
                            <SymbolIcon Symbol="Play" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                            <TextBlock Text="视频预览区域" Foreground="{ThemeResource TextFillColorSecondaryBrush}" TextAlignment="Center" />
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <Border BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="8" Padding="20" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                <StackPanel Spacing="16">
                    <TextBlock Text="提取设置" FontSize="18" FontWeight="SemiBold" />
                    <Grid ColumnSpacing="20" RowSpacing="15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <ComboBox ItemsSource="{Binding Formats}" SelectedItem="{Binding SelectedFormat, Mode=TwoWay}" Header="输出格式" />
                        <TextBox Grid.Column="1" PlaceholderText="1=每帧提取, 2=每2帧提取" Text="{Binding FrameInterval, Mode=TwoWay}" Header="帧提取间隔" Visibility="{Binding ShowAdvanced, Converter={StaticResource BoolToVisibilityConverter}}" />
                    </Grid>
                </StackPanel>
            </Border>

            <Border BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="8" Padding="20" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                <StackPanel Spacing="12">
                    <TextBlock Text="输出设置" FontSize="18" FontWeight="SemiBold" />
                    <Grid ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBox PlaceholderText="选择输出目录..." Text="{Binding OutputPath, Mode=TwoWay}" IsReadOnly="True" Header="输出文件夹" />
                        <Button Grid.Column="1" Content="浏览" CornerRadius="4" VerticalAlignment="Bottom" Margin="0,0,0,0" />
                    </Grid>
                    <TextBlock Text="文件名模板" FontWeight="SemiBold" Margin="0,10,0,0" />
                    <ComboBox IsEditable="True" ItemsSource="{Binding FileNameTemplates}" SelectedItem="{Binding FileNameTemplate, Mode=TwoWay}" />
                    <TextBlock FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}">模板说明: %06d = 六位数顺序编号, %05d = 五位数, 等</TextBlock>
                </StackPanel>
            </Border>

            <StackPanel Orientation="Horizontal" Spacing="10">
                <Button Content="开始提取" Style="{ThemeResource AccentButtonStyle}" Padding="20,10" />
                <Button Content="取消操作" Padding="20,10" />
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
